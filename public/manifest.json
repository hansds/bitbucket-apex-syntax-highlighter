{
  "manifest_version": 3,
  "name": "BitBucket Apex Syntax Highlighter",
  "description": "This extension highlights Apex code in BitBucket diffs.",
  "version": "1.0",
  "icons": {
    "128": "logo-app-gradient-square@128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://bitbucket.org/*"
      ],
      "js": [
        "js/vendor.js",
        "js/content_script.js"
      ],
      "css": [
        "css/content_script.css"
      ]
    }
  ],
  "host_permissions": [
    "https://bitbucket.org/*"
  ]
}
